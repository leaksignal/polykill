{
	"name": "Node.js & TypeScript",
	"build": {
		"dockerfile": "devcontainer.Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": ["esbenp.prettier-vscode", "dbaeumer.vscode-eslint"]
